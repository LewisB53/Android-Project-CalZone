<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.calzone.MainActivity">

    <ImageButton
        android:id="@+id/ExercisesPerformedButton"
        android:layout_width="178dp"
        android:layout_height="247dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimaryDark" />

    <ImageButton
        android:id="@+id/SleepHadButton"
        android:layout_width="178dp"
        android:layout_height="258dp"
        android:layout_marginBottom="192dp"
        android:layout_marginLeft="-119dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/EnergyButton"
        android:layout_width="190dp"
        android:layout_height="253dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:color/holo_orange_light" />

    <Button
        android:id="@+id/foodButton"
        android:layout_width="178dp"
        android:layout_height="248dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="3dp"
        android:background="@color/colorPrimary"
        android:elevation="24dp"
        android:onClick="onFoodButtonClicked"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="7dp"
        tools:layout_editor_absoluteX="190dp" />


</android.support.constraint.ConstraintLayout>
